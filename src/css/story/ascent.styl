#ascent
	padding-top 3rem
	background-color white
	color $c1

.ascent__vis
	max-width 60rem
	margin 0 auto
	padding-bottom 4em
	padding-top 2em
.ascent__vis .band
	transition opacity 0.2s
	&.is-transparent 
		opacity 0
	path 
		fill none
		stroke $gray-light
		stroke-opacity 1
		pointer-events none
	.band__show circle 
		pointer-events none
		opacity 0.5
		fill-opacity 1
		stroke-width 1
		stroke $gray-dark

	text 
		fill $off-black
		font-size 0.8rem
		font-weight 700
		pointer-events none
	
	tspan
		pointer-events none
		font-weight 500
		// font-size 10px
	
	.interaction
		cursor pointer
	
	.band__show
		&.billing-headline circle
			fill $primary	
		&.billing-opener circle
			fill $secondary	
		&.show__made circle 
			opacity 1
			fill-opacity 1
	.band__info
		visibility hidden
		
	.billing-opener text 
		fill $secondary
	.billing-headline text 
		fill $primary
		
	.band__show.is-visible
		.band__info
			visibility visible
		circle
			stroke-width 2
			stroke $off-black
			fill-opacity 1
			opacity 1
	.band__img
		display block
		circle 
			stroke $gray-light
		&.is-hidden 
			display none


.ascent__vis .axis
	display none
	text
		fill $gray-light
	path
		stroke $gray-light
		display none
	line
		stroke $gray-light
		
.ascent__vis .legend__size
	text
		font-size 11px
		text-transform uppercase
		fill $gray-dark
	.legendTitle
		font-weight 700
	circle 
		opacity 0.5
		fill-opacity 0.5
		stroke-width 1
		stroke $off-black
		fill white
	