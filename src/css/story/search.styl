$search-size = 8px
$popup-width = 360px

#search
	position relative
	margin-bottom 1em
	opacity 0
	transition opacity 500ms
	&.is-ready
		opacity 1
	
.search__vis
	transform translate3d(0px,0px,0px)
	position fixed
	top 0
	left 0
	clearfix()
	opacity 0.15
	z-index set-index('bottom')
	transition opacity 0.5s ease-in-out
	padding 0.5rem
	.band
		color lighten($c1, 35)
		line-height 1.5
		font-size $search-size
		margin 0
		display inline-block
		float left
		&:after
			content '\2022'
			display inline block
			padding 0 2px
			color lighten($c1, 20)
	.alphabet
		&::first-letter		
			font-weight bold

.is-static
	.search__vis
		z-index set-index('top')
		position absolute
		opacity 1
		cursor pointer
		.band
			&:hover
				opacity 1
				background-color $off-white
				color $c1
	.search__find
		// display block
		opacity 1
		position fixed
		pointer-events auto
	.search__launch
		display block
	.search__popup.is-visible
		display block
	.alphabet
		color $c2

.search__explore
	position absolute
	top 33%
	left 0
	width 100%
	z-index set-index('top')
	h2 
		text-align center
		font-size 2em
		font-weight 900
		
.search__launch
	display none
	position fixed
	cursor pointer
	top 1em
	right 1em
	z-index set-index('top')
	opacity 0.7
	transition opacity 0.25s
	&:hover 
		opacity 1
	svg 
		width 34px
		fill $c2
	&.is-hidden
		display none
		
.search__find
	display none
	// position fixed
	// position absolute
	position relative
	left 0
	top 0
	width 100%
	height 100vh
	z-index set-index('top')
	transform translate3d(0px,0px,0px)
	pointer-events none
	opacity 0.25
	transition opacity 0.25s
	background rgba($c1,0.75)
	padding-top 33vh
	&.is-visible
		display block
	.find__container
		position relative
		max-width 40rem
		margin 0 auto
	
	.find__results
		max-width 40rem
		margin 1em auto
		li 
			cursor pointer
			&:hover 
				font-weight 700
			
	
	.find__input 
		width 100%
		background none
		border none
		border-bottom 1px solid $c2
		outline none
		font-size 2em
		color $c2

	.find__icon
		position absolute
		cursor pointer
		top 0
		right 0
		z-index set-index('top')
		opacity 0.7
		transition opacity 0.25s
		&:hover 
			opacity 1
		svg 
			width 38px
			fill $c2
	
	.find__close 
		position absolute
		top 1em
		right 1em
		cursor pointer
		opacity 0.7
		transition opacity 0.25s
		&:hover 
			opacity 1
		svg 
			width 32px
			height 32px
			fill $c2
	
.popup
	display none
	font-size 11px
	width $popup-width
	z-index set-index('top')
	background-color $off-white
	color $c1
	border-radius 3px
	box-shadow 0 0 3px white
	padding 10px
	line-height 1.5
	pointer-events none
	.popup__name
		font-weight bold
		font-size 13px
		margin 0
		margin-bottom 0.5em
	.left
		width 60%
		float left
		padding-right 10px
	.right
		width 40%
		padding-left 10px
		float left
		border-left 1px solid $c2

.search__popup
	position fixed 
	top 0 
	left 0

.find__popup
	margin 0 auto
	margin-top 4em
	&.is-visible
		display block
.popup__info
	clearfix()	
	p 
		margin 0
	
	.popup__recent 
		// display inline-block
		// text-align center
		font-weight bold
		// border-bottom 2px solid $gray
		margin-bottom 0.5em
	.popup__shows
		font-size 10px
		span 
			font-weight bold
		li 
			border-bottom 1px dashed $gray-light
			line-height 1.5
			margin-bottom 0.25em
	.popup__text span 
		font-weight bold
		
.popup__vis
	.axis path, .tick line
		stroke #aaa
	circle 
		fill $c1
		fill-opacity 0.25
		stroke $c1
		stroke-opacity 0.5
	.tick:nth-child(n+3):nth-child(-n + 5)
		display none

		
p.search__instruction
	text-align center
	font-weight 700
	color $c2
	margin-bottom 0
	
p.down-arrow
	margin-top 0
	text-align center
	font-size 2em
	font-weight 900
	color $c2
	a 
		cursor pointer
		text-decoration none