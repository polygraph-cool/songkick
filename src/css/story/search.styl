$search-size = 10px
$popup-width = 360px

#search
	position relative
	margin-bottom 1em
	transition opacity 500ms
	min-height 320px
	+mq('bp-made')
		margin-bottom 11rem

.search__vis
	transform translate3d(0px,0px,0px)
	top 0
	left 0
	clearfix()
	position relative
	padding 0.5rem
	cursor pointer
	position relative
	padding-top 84px
	pointer-events auto
	&.is-disabled
		pointer-events none
	.band
		color lighten($c1, 35)
		line-height 1.5
		font-size $search-size
		margin 0
		display inline-block
		float left
		&:hover
			opacity 1
			background-color $off-white
			color $c1
		&:after
			content '\2022'
			display inline block
			padding 0 2px
			color lighten($c1, 20)
	.alphabet
		color $c2
		&::first-letter		
			font-weight bold
					
.search__find
	opacity 1
	position absolute
	left 0
	top 0
	width 100%
	z-index set-index('top')
	transform translate3d(0px,0px,0px)
	backface-visibility hidden
	transition opacity 0.25s
	&.is-fixed
		position fixed
	
	.find__container
		background-color $c1
		padding 0.75rem 0
		position relative
		&:after
			content ''
			display block
			width 100%
			position absolute
			left 0
			bottom -2rem
			height 2.5rem
			background-image linear-gradient(to top,rgba($c1,0),$c1 80%)
		
	.find__input 
		display block
		max-width 20rem
		margin 0 auto
		border-bottom 1px solid $c2
		position relative
		input 
			background none
			width 100%
			border none
			outline none
			font-size 1em
			color $c2

	.find__icon
		position absolute
		right 0
		bottom 0
		display block
		vertical-align middle
		margin 0
		cursor pointer
		opacity 0.7
		transition opacity 0.25s
		width 20px
		height 26px
		&:hover 
			opacity 1
		svg 
			width 20px
			height 26px
			fill $c2
			
	.find__results
		display none
		max-width 20rem
		margin 1em auto
		background-color rgba($c1, 0.65)
		border-radius 3px
		border 1px solid $c2
		padding 0.5em
		position relative
		z-index set-index('overlay')
		&.is-visible
			display block
		li 
			cursor pointer
			font-size 0.9em
			&:hover 
				font-weight 700

	
	
.popup
	display none
	font-size 11px
	width $popup-width
	z-index set-index('top')
	background-color $off-white
	color $c1
	border-radius 3px
	box-shadow 0 0 3px white
	padding 10px
	line-height 1.5
	pointer-events none
	position relative
	.popup__name
		font-weight bold
		font-size 13px
		margin 0
		margin-bottom 0.5em
	.left
		width 60%
		float left
		padding-right 10px
	.right
		width 40%
		padding-left 10px
		float left
		border-left 1px solid $c2

.search__popup
	display none
	position fixed 
	top 0 
	left 0
	&.is-visible
		display block

.find__popup
	margin 0 auto
	margin-top 4em
	pointer-events auto
	cursor pointer
	&.is-visible
		display block
.popup__info
	clearfix()	
	p 
		margin 0
	
	.popup__recent 
		// display inline-block
		// text-align center
		font-weight bold
		// border-bottom 2px solid $gray
		margin-bottom 0.5em
	.popup__shows
		font-size 10px
		span 
			font-weight bold
		li 
			border-bottom 1px dashed $gray-light
			line-height 1.5
			margin-bottom 0.25em
	.popup__text span 
		font-weight bold
		
.popup__vis
	.axis path, .tick line
		stroke #aaa
	circle 
		fill $c1
		fill-opacity 0.25
		stroke $c1
		stroke-opacity 0.5
	.tick:nth-child(n+3):nth-child(-n + 5)
		display none

		
p.search__instruction
	text-align center
	font-weight 700
	color $c2
	margin-bottom 0
	margin-top 4em
	
p.down-arrow
	margin-top 0
	text-align center
	font-size 2em
	font-weight 900
	color $c2
	a 
		cursor pointer
		text-decoration none

.popup__close
	position absolute
	top 0
	right 0
	padding 0.5em
	opacity 0.7
	&:hover
		opacity 1
		transition opacity 250ms
		
	svg 
		fill $c1
		width 16px
		height 16px