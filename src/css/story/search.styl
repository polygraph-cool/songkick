$search-size = 8px

#search
	position relative
	margin-bottom 1em
	
.search__vis
	transform translate3d(0px,0px,0px)
	position fixed
	top 0
	left 0
	clearfix()
	opacity 0.2
	z-index set-index('bottom')
	transition opacity 0.5s ease-in-out
	padding 0.5rem
	// text-align center	
	// font-size $search-size - 1
	// line-height 1
	// line-height $search-size
	.band
		color lighten($c1, 20)
		line-height 1.5
		font-size $search-size
		margin 0
		// display inline
		display inline-block
		float left
		&:after
			content '\2022'
			display inline block
			padding 0 2px
			color lighten($c1, 20)
	.alphabet
		&::first-letter		
			font-weight bold

.is-static
	.search__vis
		z-index set-index('top')
		position absolute
		opacity 1
		cursor pointer
		.band
			&:hover
				opacity 1
				background-color $off-white
				color $c1
	.search__find
		display block
	.search__popup.is-visible
		display block
	.alphabet
		color $c2
	
.search__find
	display none
	position fixed
	top 25%
	left 0
	width 100%
	z-index set-index('top')
	
	.find__container
		max-width 40rem
		margin 0 auto
		
	
	.find__input 
		display none
		width 100%
		background none
		border none
		border-bottom 1px solid $c2
		outline none
		font-size 2em
		color $c2

.search__popup
	display none
	font-size 11px
	position fixed 
	top 0 
	left 0
	width 240px
	z-index set-index('top')
	background-color $off-white
	color $c1
	border-radius 3px
	box-shadow 0 0 3px white
	padding 0.5em 0.75em
	line-height 1.5
	pointer-events none
	.popup__name
		font-weight bold
		font-size 13px
		margin-bottom 0.5em
	.popup__shows span 
		font-weight bold
		
	.popup__biggest
		text-transform uppercase
.popup__vis
	circle 
		fill $c1
		fill-opacity 0.25
		stroke $c1
		stroke-opacity 0.5
	.tick:nth-child(n+3):nth-child(-n + 5)
		display none
	