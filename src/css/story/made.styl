$trigger-width = 20em

#made
	position relative

.made__prose
	// width 100%
	width 35%
	position absolute
	top 0
	right 0
	padding 1rem
	.trigger 
		height 100vh
		max-width 25em
		margin 0 auto
		// background rgba(red, 0.5)
		p 
			margin 0
			// background rgba($c2, 0.8)
			// border-radius 4px
			// box-shadow 0 0 8px 8px $c1
		// &:first-child p
		// 	margin-top 95vh
		// &:last-child
		// 	height 125vh
		&:nth-child(-n+3)
			height auto
			margin-bottom 1em
	
		
.made__vis
	position absolute
	left 0
	top 0
	// width 100%
	width 65%
	height 100vh
	margin 0
	transform translate3d(0px,0px,0px)
	z-index -1
	&.is-fixed
		position fixed
		top 0
		left 0
	&.is-bottom
		position absolute
		top auto
		bottom 0
		
	
.made__chart
	position relative
	margin 0 auto
	top 50%
	transform translateY(-50%)
	canvas
		position absolute
		top 0
		left 0
		display block
		// background #fff
		margin 0 auto
	svg 
		position absolute
		top 0
		left 0
		display block
		margin 0 auto
		font-family Helvetica
		text-transform uppercase
		font-size 12px
		font-weight bold
		fill lighten($c1, 30)
	
	.ring
		opacity 1
		transition opacity 500ms ease-in-out
		path 
			fill none
			stroke lighten($c1, 30)
			stroke-dasharray 4 4
		&.is-hidden
			opacity 0