$trigger-width = 20em

#made
	position relative
	// display none
.made__prose
	// width 100%
	width 25rem
	top 0
	left 0
	padding 1.5rem
	z-index set-index('top')
	position relative
	&.is-ready
		position absolute
	.trigger 
		height 80vh
		max-width 25em
		margin 0 auto
		p 
			margin 1.5rem 0
		&.lead
			height auto
		&.big
			height auto
		&.band
			height auto
			margin-bottom 3em
			opacity 0.2
			transition opacity 250ms
			clearfix()
		&.band:last-child
			margin-bottom 50vh
		&.is-focus
			opacity 1

$band-img-width = 64px
.band__img 
	width $band-img-width
	float left

.band__list
	padding-left $band-img-width * 1.1
	font-size 0.8em
	text-transform uppercase
	li 
		line-height 1.65
		
.list__name
	font-weight 700

.list__date, .list__venue
	font-size 0.9em
	
.made__vis
	position absolute
	right 0
	top 0
	// width 100%
	margin-left 25rem
	height 100vh
	margin 0
	transform translate3d(0px,0px,0px)
	z-index set-index('bottom')
	&.is-fixed
		position fixed
		top 0
		right 0
	&.is-bottom
		position absolute
		top auto
		bottom 0
		
	
.made__chart
	position relative
	margin 0 auto
	top 50%
	transform translateY(-50%)
	canvas
		position absolute
		top 0
		left 0
		display block
		// background #fff
		margin 0 auto
	svg 
		position absolute
		top 0
		left 0
		display block
		margin 0 auto
		font-family Helvetica
		text-transform uppercase
		font-size 12px
		font-weight bold
		fill lighten($c1, 30)
		
	
	.ring
		opacity 1
		transition opacity 500ms ease-in-out
		path 
			fill none
			stroke lighten($c1, 30)
			
			stroke-dasharray 4 4
		&.is-hidden
			opacity 0

.btn__audio
	cursor pointer
	opacity 0.6
	display inline-block
	vertical-align middle
	// transform translateY(-2px)
	margin-left 0.5em
	transition opacity 0.25s
	&:hover 
		opacity 1
	
	svg 
		fill white
		height 12px
		width 15px
		
	&.is-playing
		svg
			fill $c2
		