$band-img-width = 64px

#made
	position relative
	max-width 1200px
	margin 0 auto

.made__prose
	max-width 25rem
	padding 0.75rem
	z-index set-index('top')
	position relative
	+mq('bp-made')
		padding 1.5rem
	.trigger 
		height 100vh
		+mq('bp-made')
			height 80vh
		max-width 25em
		margin 0 auto
		p 
			margin 1.5rem 0
			background-color rgba($c1, 0.8)
			padding 0.5em
			border-radius 3px
			+mq('bp-made')
				padding 0
				border-radius 0
				background-color transparent
			
		&.lead
			height auto
		&.big
			height auto
		&.band
			height auto
			margin 0
			opacity 0.1
			transition opacity 250ms
			pointer-events none
			clearfix()
			background-color rgba($c1, 0.8)
			padding 2em 0
			&.is-focus
				opacity 1
				pointer-events auto
			+mq('bp-made')
				padding 0
				opacity 0.2
				margin-bottom 3em
				background-color transparent
	iframe 
		border-radius 3px

.band__img 
	width $band-img-width
	height $band-img-width
	border-radius $band-img-width
	background-size cover
	background-position center center
	background-repeat no-repeat
	float left

.band__list
	padding-left $band-img-width * 1.2
	font-size 0.9em
	li 
		line-height 1.65
		
	.list__name
		font-weight 700
		font-size 1.1em
		line-height 1.25

	.list__date, .list__venue
		font-size 0.8em
	
.band__list-others
	background-color rgba($c1, 0.8)
	padding 0.5em
	border-radius 3px
	font-size 0.85em
	li
		font-weight 700
		display inline-block
		&:after
			content '\2022'
			display inline-block
			padding 0 2px
		&:last-child:after
			content none




.made__vis
	position absolute
	top 0
	right 0
	height 100vh
	margin 0
	transform translate3d(0px,0px,0px)
	backface-visibility hidden
	z-index set-index('bottom')
	// background-color $c1
	opacity 0
	transition 300ms opacity ease-in-out

	+mq('bp-made')
		opacity 1
	&.is-visible 
		opacity 1
	&.is-fixed
		position fixed
		top 0
	&.is-bottom
		position absolute
		top auto
		bottom 0
		
	
.made__chart
	position relative
	margin 0 auto
	top 50%
	transform translateY(-50%)
	
	canvas
		position absolute
		top 0
		left 0
		display block
		margin 0 auto
	svg 
		position absolute
		top 0
		left 0
		display block
		margin 0 auto
		// font-family Helvetica
		text-transform uppercase
		font-size 12px
		font-weight bold
		fill lighten($c1, 40)
		
	.small
		position absolute
		top 7.5%
		left 7.5%
		width 85%
		height 85%
		opacity 0.6
		background-position center center
		background-size contain
		animation-iteration-count infinite
		animation-timing-function linear
		animation-name rotate-circle
		transition opacity 500ms
		&.is-blur
			opacity 0.3
	
	for i in (0..9)
		.small-{i}
			background-image url('assets/light/small-' + i + '.png')
			// background-image url('assets/dark/small-' + i + '.png')
			animation-duration random(20000, 35000)ms

	.ring
		opacity 1
		transition opacity 500ms ease-in-out
		path 
			fill none
			stroke lighten($c1, 60)
			// stroke lighten($c1, 30)
			stroke-dasharray 4 4

		&.is-hidden
			opacity 0

.btn__audio
	cursor pointer
	opacity 0.6
	display inline-block
	vertical-align middle
	margin-left 0.25rem
	transition opacity 0.5s
	line-height 1
	border-radius 4px
	padding 2px
	border 2px solid $primary
	background-color lighten($primary, 30)
	&:hover 
		opacity 1
	
	svg 
		height 13px
		width 20px
		fill $gray-dark
		
	&.is-playing
		svg
			fill darken($primary, 20)


@keyframes rotate-circle
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)

.made__annotation
	font-size 12px
	max-width 8rem
	line-height 1.4
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	text-align center
	opacity 1
	transition opacity 250ms
	+mq('bp-annotation')
		transform translate(0%, -50%)
		text-align left
	p 
		margin 0
	&:before
		content '\2190'
		display inline-block
		position absolute
		top 0
		left 0
		transform translateX(-150%)
		display none
		+mq('bp-annotation')
			display block
	&.is-hidden
		opacity 0