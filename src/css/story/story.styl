fontify($whitney, $whitney-hash, 500, $sans, 400, 0.04em)
fontify($mercury, $mercury-hash, 400, $serif, 400, 0.04em)

body
	background $c1
	color $c2
	line-height 1.7
	font-size 15px
	overflow-x hidden
	+mq('bp-2')
		font-size 16px
a 
	color $secondary-light
p 
	margin 1.5rem 0

.section__header
	max-width 40rem
	margin 0 auto
	padding 0 0.75rem

.header__hed
	text-align center
	text-transform uppercase
	font-size 1.5em
	font-weight 500
	// color white

.bridge
	max-width 40rem
	margin 0 auto
	padding 1em 0.75rem
	padding-bottom 0

.outro
	margin 2em auto
	padding 1em 0.75rem 2em 0.7rem
	max-width 40rem
	p
		font-size 0.8em
		span 
			font-weight 700
		&:first-child 
			padding-top 0.5em
			border-top 2px solid $gray-light

.heavy
	font-weight 700

.opener 
	color $secondary
	font-weight 700

.headliner 
	color $primary
	font-weight 700
	
.hi-white
	font-weight 700
	color $primary

.hi-primary
	font-weight 700
	color $primary

.hi-secondary
	font-weight 700
	color $secondary-light

.weight-500
	font-weight 500