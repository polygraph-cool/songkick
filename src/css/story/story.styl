$mercury = 'Mercury SSm A', 'Mercury SSm B'
$mercury-hash = 'mercury'
$mercury-subset = 'Mercury SSm subset A', 'Mercury SSm subset B'
$mercury-subset-hash = 'mercury-subset'

$whitney = 'Whitney SSm A', 'Whitney SSm B'
$whitney-hash = 'whitney'
$whitney-subset = 'Whitney SSm subset A', 'Whitney SSm subset B'
$whitney-subset-hash = 'whitney-subset'

fontify($whitney-subset, $whitney-subset-hash, $sans)
fontify($whitney, $whitney-hash, $sans)

fontify($mercury-subset, $mercury-subset-hash, $serif)
fontify($mercury, $mercury-hash, $serif)

			
body
	background $c1
	color lighten($c1, 70)
	line-height 1.8
	font-size 15px
	overflow-x hidden
	font-weight 400
	// &.tk-mercury-ssm-a-400
	// 	font-weight 500
	+mq('bp-2')
		font-size 17px
a 
	color $c2
p 
	margin 1.5rem 0

.section__header
	max-width 40rem
	margin 0 auto
	padding 0 0.75rem

.header__hed
	text-align center
	font-weight 900
	text-transform uppercase
	font-size 1.5em
	color white

.bridge
	max-width 40rem
	margin 0 auto
	padding 1em 0.75rem
	padding-bottom 0

.outro
	margin 2em auto
	padding 1em 0.75rem 2em 0.7rem
	max-width 40rem
	p
		font-size 0.8em
		span 
			font-weight 700
		&:first-child 
			padding-top 0.5em
			border-top 2px solid $gray-light

.heavy
	font-weight 700
.opener 
	color $c3-light
	font-weight 700
.headliner 
	color $c2
	font-weight 700
	
.hi-white
	font-weight 700
	color white

.hi-pink
	font-weight 700
	color $c2