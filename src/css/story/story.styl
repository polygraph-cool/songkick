$libre = 'Libre Franklin'
$libre-hash = 'libre-franklin'
$bitter = 'Bitter'
$bitter-hash = 'bitter'
fontify($libre, $libre-hash, 400, $sans)
fontify($libre, $libre-hash, 700, $sans)
fontify($libre, $libre-hash, 900, $sans)
fontify($bitter, $bitter-hash, 400, $serif)
fontify($bitter, $bitter-hash, 700, $serif)
			
body
	background $c1
	color lighten($c1, 70)
	line-height 1.8
	font-size 17px
	overflow-x hidden	
a 
	color $c2
p 
	margin 1.5rem 0

.section__header
	max-width 40rem
	margin 0 auto
	padding 0 0.75rem

.header__hed
	text-align center
	font-weight 900
	text-transform uppercase
	font-size 1.5em
	color white

.bridge
	max-width 40rem
	margin 0 auto
	padding 1em 0.75rem
	padding-bottom 0

.outro
	margin 2em auto
	padding 1em 0 2em 0
	max-width 40rem
	p
		font-size 0.8em
		span 
			font-weight 700
		&:first-child 
			padding-top 0.5em
			border-top 2px solid $gray-light

.heavy
	font-weight 700
.opener 
	color $c3-light
	font-weight 700
.headliner 
	color $c2
	font-weight 700
	
.hi-white
	font-weight 700
	color white

.hi-pink
	font-weight 700
	color $c2