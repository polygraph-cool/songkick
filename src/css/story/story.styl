$libre = 'Libre Franklin'
$libre-hash = 'libre-franklin'

fontify(font, hash, weight, fallback)
	.tk-{hash}-{weight}
		font-family fallback
		font-weight weight
		.loaded-{hash}-{weight} & 
			font-family font, fallback

fontify($libre, $libre-hash, 300, $sans)
fontify($libre, $libre-hash, 400, $sans)
fontify($libre, $libre-hash, 700, $sans)
fontify($libre, $libre-hash, 900, $sans)
			
body
	background $c1
	color lighten($c1, 65)
	line-height 1.8
	font-size 17px
a 
	color $c2
p 
	margin 1em 0
