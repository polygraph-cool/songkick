$logo-height = 36px
$logo-width = 126px

header 
	position fixed
	top 1em
	left 1em
	width 100%
	padding 0 0.5em
	// text-align right
	clearfix()
	.logo
		display inline-block
		height $logo-height
		.logo__part
			display inline-block
			float left
			line-height $logo-height
			margin 0
			padding 0 2px
			font-size 10px
			font-weight 500
			color darken($gray, 10)
		.logo__polygraph 
			width $logo-width
			height $logo-height
			fill $off-black
			fill $off-white